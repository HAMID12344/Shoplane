    <style>
      .notification {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #fff;
        padding: 16px 24px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        border-left: 4px solid #52c41a;
        display: flex;
        align-items: center;
        gap: 16px;
        transform: translateY(-100%);
        transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
        opacity: 0;
      }

      .notification.show {
        transform: translateY(0);
        opacity: 1;
      }

      .notification .icon {
        font-size: 24px;
        color: #52c41a;
      }

      .notification .message {
        font-size: 16px;
        color: #333;
      }
    </style>
