    <script>
      const carousel = document.getElementById("carousel");
      const prev = document.getElementById("prev");
      const next = document.getElementById("next");

      const slides = Array.from(carousel.children); // Convert child nodes to array
      const totalSlides = slides.length;

      let currentIndex = 0;

      // Set the width of the carousel dynamically based on the number of slides
      carousel.style.width = `${totalSlides * 100}%`;

      // Set each slide's width dynamically
      slides.forEach((slide) => {
        slide.style.width = `${100 / totalSlides}%`;
      });

      // Handle next button click
      next.addEventListener("click", () => {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      });

      // Handle previous button click
      prev.addEventListener("click", () => {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      });

      // Function to update carousel position
      function updateCarousel() {
        const offset = -currentIndex * (100 / totalSlides); // Calculate the offset
        carousel.style.transform = `translateX(${offset}%)`;
      }
    </script>
