  <script>
    const totalPages = 20; // Adjust this to the total number of pages
    const maxVisiblePages = 4; // Number of pages visible at once
    let currentPage = 1;

    function renderPagination() {
      const pageNumbersContainer = document.getElementById("page-numbers");
      pageNumbersContainer.innerHTML = "";
      const startPage = Math.max(
        1,
        currentPage - Math.floor(maxVisiblePages / 2)
      );
      const endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

      for (let i = startPage; i <= endPage; i++) {
        const pageElement = document.createElement("span");
        pageElement.className = "page" + (i === currentPage ? " active" : "");
        pageElement.innerText = i;
        pageElement.onclick = () => setPage(i);
        pageNumbersContainer.appendChild(pageElement);
      }

      document.querySelector(".prev").disabled = currentPage === 1;
      document.querySelector(".next").disabled = currentPage === totalPages;
    }

    function setPage(page) {
      currentPage = page;
      renderPagination();
    }

    function prevPage() {
      if (currentPage > 1) {
        setPage(currentPage - 1);
      }
    }

    function nextPage() {
      if (currentPage < totalPages) {
        setPage(currentPage + 1);
      }
    }

    renderPagination(); // Initial render
  </script>

