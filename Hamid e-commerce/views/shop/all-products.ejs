    <style>
      /* General Styles */
      body {
        font-family: "Montserrat", sans-serif;
        margin: 0;
        padding: 20px;
        background: #fff;
        color: #333;
      }

      h2 {
        font-size: 32px;
        color: #333;
        letter-spacing: 1px;
        text-transform: uppercase;
      }

      /* Slider Container */
      .slider-container {
        position: relative;
        margin: 40px 0;
      }

      /* Slider */
      .slider {
        display: flex;
        gap: 20px;
        overflow-x: auto;
        scroll-behavior: smooth;
        padding: 20px 10px;
      }

      .slider::-webkit-scrollbar {
        height: 8px;
      }

      .slider::-webkit-scrollbar-thumb {
        background: #f60;
        border-radius: 10px;
      }

      .slider::-webkit-scrollbar-thumb:hover {
        background: #bbb;
      }

      /* Product Card */
      .product {
        flex: 0 0 300px;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(12px);
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;

        text-align: center;
        padding: 15px;
        position: relative;
      }

      /* Image Wrapper with Dynamic Background */
      .product-image {
        width: 100%;
        height: 200px;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        border: 1px solid #eee;
      }

      .product img {
        max-width: 90%;
        max-height: 90%;
        transition: transform 0.5s ease, filter 0.5s ease;
      }

      .product:hover img {
        transform: scale(1.2); /* Magnifier Effect */
        filter: brightness(1.1);
        cursor: zoom-in;
      }

      .product h3 {
        font-size: 20px;
        margin: 15px 0 10px;
        color: #333;
        min-height: 49px;
      }

      .rating {
        display: flex;
        justify-content: center;
        gap: 3px;
        margin-bottom: 10px;
      }

      .product p {
        font-size: 18px;
        color: #666;
        margin: 10px 0;
      }

      /* Buttons */
      .product-buttons {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 15px;
      }

      .btn {
        padding: 10px 15px;
        font-size: 14px;
        color: #fff;
        background: #007bff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s, transform 0.2s;
      }

      .cat-btn {
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 10px;
        font-size: 14px;
      }

      .cat-add {
        background-color: #333;
        color: #fff;
        transition: 0.2s all;
      }
      .cat-add:hover {
        background-color: #111;
      }

      .cat-options:hover {
        background-color: #f60;
        color: #fff;
        border: 1px solid #fff;
      }
      .cat-options {
        background-color: #fff;
        color: #333;
        border: 1px solid #333;
        transition: 0.2s all;
      }

      .container-prods {
        max-width: 1200px;
        margin: 0 auto;
        margin-top: 48px;
        padding: 0px 20px;
      }
      .btn:hover {
        background: #0056b3;
        transform: scale(1.05);
      }

      .btn.secondary {
        background: #6c757d;
      }

      .heading-prod {
        min-height: 49px;
      }

      .btn.secondary:hover {
        background: #5a6268;
      }
      .stars-icon {
        width: 20px;
        height: 20px;
      }

      .stars-icon {
        stroke: rgb(4, 198, 4);
        fill: rgb(4, 198, 4);
      }
      .product:hover {
        /* transform: translateY(-5px); */
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
      }
      .slider-buttons {
        position: absolute;
        top: 50%;
        width: 100%;
        display: flex;
        justify-content: space-between;
        transform: translateY(-50%);
      }

      .slider-buttons button {
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
        border: none;
        padding: 10px 15px;
        font-size: 20px;
        border-radius: 50%;
        cursor: pointer;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        transition: background 0.3s, transform 0.3s;
      }

      .slider-buttons button:hover {
        background: #007bff;
        transform: scale(1.1);
      }

      .slider-header
      {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .view-all:link, .view-all:visited{
        text-decoration: none;
        color: #f60;
        font-weight: bold;
        font-size: 16px;
        transition: 0.2s all;
      }

      .view-all:hover{
        text-decoration: underline;
        color: #000;
      }

      .category {
        font-size: 32px;
      }
      /* Responsive Design */
      @media (max-width: 768px) {
        .product {
          flex: 0 0 80%;
        }
      }

      @media (max-width: 480px) {
        .product {
          flex: 0 0 100%;
        }

        h2 {
          font-size: 24px;
        }
      }
    </style>
