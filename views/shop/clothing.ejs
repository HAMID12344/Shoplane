<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Accessories</title>
  </head>
  <body
    style="margin: 0; font-family: Arial, sans-serif; background-color: #f0f0f5"
  >
    <!-- Header -->
    <header
      style="
        background: linear-gradient(to right, #667eea, #764ba2);
        color: white;
        padding: 20px 0;
        text-align: center;
      "
    >
      <h1 style="margin: 0; font-size: 2.5rem">AccessorizeMe</h1>
      <p style="margin: 5px 0">Style That Speaks</p>
    </header>

    <!-- Accessories Section -->
    <main style="padding: 30px">
      <h2 style="text-align: center; color: #333">Popular Accessories</h2>
      <div
        id="accessoryGrid"
        style="
          margin-top: 25px;
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
          gap: 20px;
        "
      ></div>
    </main>

    <!-- Footer -->
    <footer
      style="background: #222; color: white; text-align: center; padding: 15px"
    >
      &copy; 2025 AccessorizeMe. All rights reserved.
    </footer>

    <!-- JavaScript -->
    <script>
      const accessories = [
        {
          name: "Leather Belt",
          price: "$25.00",
          img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQGoBqkSP3_xbOOXWBmW0mVAr9uvbZ1bb6N5Q&s",
        },
        {
          name: "weight plates",
          price: "$45.00",
          img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRwiH3T2q-9rokfRwTG8e_wnx8w2e5KcPyYxg&s",
        },
        {
          name: "GRIPPER",
          price: "$15.00",
          img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQEy0qHcUeFTXzQ0QqLvAETL8wTxhE7PN9iTQ&s",
        },
        {
          name: "GIM SUIT",
          price: "$29.99",
          img: "https://i.pinimg.com/736x/3d/80/7b/3d807bebebd9aa42d9e2b1492d48c1dc.jpg",
        },
        {
          name: "Backpack",
          price: "$55.00",
          img: "https://static-01.daraz.pk/p/82dd708cd5e9a837c168253e5cad8026.jpg",
        },
        {
          name: "GYM SHOES",
          price: "$99.00",
          img: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRQJJrVZbkutYSWNo8wT_HrSR0Tf1CXbWy8tQ&s",
        },
      ];

      const grid = document.getElementById("accessoryGrid");

      accessories.forEach((item) => {
        const card = document.createElement("div");
        card.style.border = "1px solid #ccc";
        card.style.borderRadius = "12px";
        card.style.overflow = "hidden";
        card.style.backgroundColor = "#fff";
        card.style.boxShadow = "0 4px 12px rgba(0,0,0,0.1)";
        card.style.transition = "transform 0.2s";
        card.onmouseenter = () => (card.style.transform = "translateY(-5px)");
        card.onmouseleave = () => (card.style.transform = "translateY(0)");

        card.innerHTML = `
        <img src="${item.img}" alt="${item.name}" style="width: 100%; height: 200px; object-fit: contain;">
        <div style="padding: 15px; text-align: center;">
          <h3 style="margin: 10px 0; font-size: 1.2rem;">${item.name}</h3>
          <p style="color: #777; margin: 0 0 10px;">${item.price}</p>
          <button style="padding: 10px 20px; border: none; background-color: #667eea; color: white; border-radius: 6px; cursor: pointer;" onclick="alert('Order placed successfully!')">Add to Cart</button>
        </div>
      `;
        grid.appendChild(card);
      });
    </script>
  </body>
</html>
