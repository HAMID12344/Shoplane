    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link href="/css/home.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link href="/css/category.css" rel="stylesheet" />
    <style>
      .brand-header {
        max-width: 120rem;
        margin: 4.8rem auto;
        text-align: center;
        font-weight: 700;
        background-color: #f60;
        color: #fff;
        text-transform: uppercase;
        font-size: 3.2rem;
        border-radius: 5px;
        padding: 1rem;
      }

      .brand-products {
        position: relative;
      }

      .brand-grid {
        max-width: 120rem;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 4.2rem;
        margin-bottom: 4.8rem;
      }

      .brand-image-box {
        border: solid 1px #ddd;
        border-radius: 40px;
        display: flex;
        justify-content: center;
        padding: 5.2rem 4.8rem;
        cursor: pointer;
        transition: 1s all;
        margin-bottom: 2rem;
      }
      .brand-image-box:hover {
        border: solid 1px #f60;
      }

      .brand-grid img {
        width: 100%;
        transition: 0.5s all;
      }

      .brand-grid img:hover {
        transform: scale(1.2);
      }

      .brand-rating {
        display: flex;
        justify-content: center;
      }
      .brand-stars {
        width: 2rem;
        height: 2rem;
      }
      .brand-tag {
        text-align: center;
        background-color: #4aa15a;
        color: #fff;
        font-size: 10px;
        font-weight: 200;
        text-transform: uppercase;
        padding: 2rem 1.5rem;
        border-radius: 50%;
        position: absolute;
        top: 10px;
        left: 0;
        transform: translate(-50%, -50%);
      }

      .brand-text {
        text-align: center;
        font-size: 1.4rem;
        font-weight: bold;
        color: #111;
        margin-bottom: 1rem;
        margin-top: 1rem;
      }

      .brand-price {
        font-size: 8px;
        font-weight: 400;
        color: #111;
        text-align: center;
        font-size: 12px;
        margin-bottom: 2rem;
      }
      /* From Uiverse.io by vinodjangid07 */
      .CartBtn {
        width: 100px;
        height: 40px;
        border-radius: 12px;
        border: none;
        background-color: #f60;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition-duration: 0.5s;
        overflow: hidden;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.103);
        position: relative;
      }

      .IconContainer {
        position: absolute;
        left: -50px;
        width: 10px;
        height: 10px;
        background-color: transparent;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        z-index: 2;
        transition-duration: 0.5s;
      }

      .icon {
        border-radius: 1px;
      }

      .text {
        height: 100%;
        width: fit-content;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        z-index: 1;
        transition-duration: 0.5s;
        font-size: 11px;
        font-weight: 600;
      }

      .CartBtn:hover .IconContainer {
        transform: translateX(58px);
        border-radius: 40px;
        transition-duration: 0.5s;
      }

      .CartBtn:hover .text {
        transform: translate(10px, 0px);
        transition-duration: 0.5s;
      }

      .cart {
        stroke: #fff;
        fill: #fff;
      }

      .CartBtn:active {
        transform: scale(0.95);
        transition-duration: 0.5s;
      }
      .brand-button {
        display: flex;
        justify-content: center;
      }
      .product-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        width: 100%;
      }

      .product-item {
        position: relative;
        cursor: pointer;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .product-item:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      }

      .product-item img {
        width: 100%;
        height: 400px;
      }

      .product-item .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .product-item:hover .overlay {
        opacity: 1;
      }

      .products-display {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #fff;
        border-radius: 10px;
      }
      .brand-category {
        max-width: 120rem;
        margin: 0 auto;
        padding-bottom: 7rem;
        margin-bottom: 3rem;
        border-bottom: 1px solid #ddd;
      }

      .brand-view-all {
        display: flex;
        max-width: 120rem;
        margin: 0 auto;
        justify-content: flex-end;
        margin-bottom: 4rem;
      }
      .cta {
        border: none;
        background: none;
        cursor: pointer;
      }

      .cta span {
        padding-bottom: 7px;
        letter-spacing: 4px;
        font-size: 14px;
        padding-right: 15px;
        text-transform: uppercase;
      }

      .cta svg {
        transform: translateX(-8px);
        transition: all 0.3s ease;
      }

      .cta:hover svg {
        transform: translateX(0);
        fill: #f60;
      }

      .cta:active svg {
        transform: scale(0.9);
      }

      .hover-underline-animation {
        position: relative;
        color: black;
        padding-bottom: 20px;
      }

      .hover-underline-animation:after {
        content: "";
        position: absolute;
        width: 100%;
        transform: scaleX(0);
        height: 2px;
        bottom: 0;
        left: 0;

        background-color: #f60;
        transform-origin: bottom right;
        transition: transform 0.25s ease-out;
      }

      .cta:hover .hover-underline-animation:after {
        transform: scaleX(1);
        transform-origin: bottom left;
      }
    </style>
  </head>
