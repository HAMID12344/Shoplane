<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/home.css" rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <link href="/css/product.css" rel="stylesheet" />
    <title>Product</title>
    <style>
      .notification {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #fff;
        padding: 16px 24px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        border-left: 4px solid #52c41a;
        display: flex;
        align-items: center;
        gap: 16px;
        transform: translateY(-100%);
        transition: transform 0.4s ease-in-out, opacity 0.4s ease-in-out;
        opacity: 0;
      }

      .notification.show {
        transform: translateY(0);
        opacity: 1;
      }

      .notification .icon {
        font-size: 24px;
        color: #52c41a;
      }

      .notification .message {
        font-size: 16px;
        color: #333;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <img src="/img/techstore.png" alt="logo of store" class="tech-logo" />
        <nav class="nav-list">
          <ul class="list">
            <li><a href="/" class="nav-links">Home</a></li>
            <li class="dropdown-container">
              <a href="#" class="nav-links">What's New</a>
              <div class="dropdown">
                <a href="#">New Arrivals</a>
                <a href="#">Trending</a>
                <a href="#">Best Sellers</a>
              </div>
            </li>
            <li class="dropdown-container">
              <a href="#" class="nav-links">Category</a>
              <div class="dropdown">
                <a href="#">Headphones</a>
                <a href="#">Earbuds</a>
                <a href="#">Wired Earphones</a>
                <a href="#">Speakers</a>
              </div>
            </li>
            <li><a href="#" class="nav-links">Blogs</a></li>

            <% if (userIsLoggedIn) { %>
            <li><a href="/profile" class="nav-links">My Orders</a></li>
            > <% } %>
          </ul>
        </nav>

        <div class="icon-container">
          <div class="Account">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="account-icon"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"
              />
            </svg>
            <div class="dropdown-container sm-cont">
              <% if (userIsLoggedIn) { %>
              <a href="#" class="profile-link">Account</a>
              <div class="dropdown sm-drop">
                <a href="/logout">Sign out</a>
              </div>
              <% } else { %>
              <a href="/login" class="profile-link">Account</a>
              <% } %>
            </div>
          </div>
          <div class="Cart">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="cart-icon"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
              />
            </svg>

            <a href="#" class="profile-link" onclick="toggleCartDrawer()"
              >Cart</a
            >
          </div>
        </div>
      </div>

      <div id="cart-drawer" class="cart-drawer hidden">
        <div class="cart-header">
          <h2>Your Cart</h2>
          <button class="close-cart" onclick="toggleCartDrawer()">
            &Cross;
          </button>
        </div>

        <div class="cart-items">
          <% if (cart.length === 0) { %>
          <div class="empty-cart-message">
            <p>Your cart is empty.</p>
          </div>
          <% } else { %> <% cart.forEach(item => { %>
          <div class="cart-item">
            <img src="<%= item.imageUrl[0] %>" alt="<%= item.name %>" />
            <div class="item-details">
              <p><%= item.name %></p>
              <p>Category: <%= item.category %></p>
              <p>Price: $<%= item.price %></p>
              <p>Quantity: <%= item.quantity %></p>
            </div>
            <p>Total: $<%= item.totalPrice %></p>
          </div>
          <% }) %> <% } %>
        </div>

        <div class="trash">
          <% if (cart.length !== 0) { %>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="trash-icon"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
            />
          </svg>

          <a href="/clear-cart/<%=User._id%>" class="trash-link">Clear Cart</a>
          <% } %>
        </div>

        <div class="cart-footer">
          <% if (cart.length > 0) { %>
          <p>Subtotal: $<%= totalPrice %></p>
          <button
            class="checkout-btn"
            onclick="window.location.href='/checkout'"
          >
            Checkout
          </button>
          <% } %>
        </div>
      </div>
    </header>
    <% if (isShow) { %>
    <div id="cartNotification" class="notification show">
      <div class="icon">✔️</div>
      <div class="message">Item successfully added to your cart!</div>
    </div>
    <script>
      // Automatically hide the notification after 3 seconds
      setTimeout(() => {
        const notification = document.getElementById("cartNotification");
        if (notification) {
          notification.classList.remove("show");
        }
      }, 3000);
    </script>
    <% } %>
    <breadcrumbs>
      <div class="generic-container">
        <div class="flex-container">
          <a href="#" class="bread-links">Electronics</a>
          <span>/</span>
          <a href="#" class="bread-links"><%=prod.category%></a>
          <span>/</span>
          <a href="#" class="bread-links current"><%=prod.name%></a>
        </div>
      </div>
    </breadcrumbs>
    <section>
      <div class="generic-container">
        <div class="grid-2cols">
          <div class="images-column">
            <div class="image-container">
              <img src="<%=prod.imageUrl[0]%>" alt="headphones" />
            </div>
            <div class="sm-cont">
              <% prod.imageUrl.forEach(image => { %>
              <div class="image-container-sm">
                <img src="<%= image %>" alt="product image" />
              </div>
              <% }); %>
            </div>
          </div>
          <div>
            <div class="item-section">
              <h1 class="item-name"><%=prod.name%></h1>
              <p class="item-description"><%=prod.description%></p>

              <div class="stars">
                <% for (let i = 0; i < prod.rating; i++) { %>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="stars-icon"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
                  />
                </svg>
                <% } %>
              </div>
              <div class="line mtop"></div>
            </div>
            <div class="price-section">
              <p class="item-price">$<%=prod.price%>%></p>
              <p class="payment-desc">
                Suggested payments with 6 months of financial planning.
              </p>
              <div class="line mtop"></div>
            </div>
            <div class="color-section">
              <p class="color">Choose Color</p>
              <div class="colors">
                <a class="color-links" href="#">
                  <div class="box red"></div>
                </a>
                <a class="color-links" href="#">
                  <div class="box blue"></div>
                </a>
                <a class="color-links" href="#">
                  <div class="box black"></div>
                </a>
                <a class="color-links" href="#">
                  <div class="box green"></div>
                </a>
              </div>
              <div class="line"></div>
            </div>
            <div class="quantity-section">
              <button class="quantity-btn decrease">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="signs"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5 12h14"
                  />
                </svg>
              </button>

              <span class="number">1</span>

              <button class="quantity-btn increase">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="signs"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 4.5v15m7.5-7.5h-15"
                  />
                </svg>
              </button>
              <div>
                <p class="qty-desc">
                  Only <strong class="str"><%=prod.quantity%></strong> items
                  left
                </p>
                <p>Hurry Up!</p>
              </div>
            </div>
            <div class="button-section">
              <button class="prod-btn buy-now">Buy Now</button>
              <form action="/add-to-cart" method="POST" style="width: 50%">
                <input
                  type="hidden"
                  name="quantity"
                  class="hidden-quantity"
                  value="1"
                />
                <input
                  type="hidden"
                  name="productId"
                  class="hidden-quantity"
                  value="<%=prod._id%>"
                />

                <button type="submit" class="prod-btn" style="width: 100%">
                  Add to Cart
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const decreaseBtn = document.querySelector(".decrease");
      const increaseBtn = document.querySelector(".increase");
      const quantitySpan = document.querySelector(".number");
      const hiddenQuantityInput = document.querySelector(".hidden-quantity");
      const maxQuantity = "<%= prod.quantity %>"; // Available stock

      let quantity = 1; // Initial quantity

      // Decrease button logic
      decreaseBtn.addEventListener("click", () => {
        if (quantity > 1) {
          quantity--;
          quantitySpan.textContent = quantity;
          hiddenQuantityInput.value = quantity; // Update hidden input
        }
      });

      // Increase button logic
      increaseBtn.addEventListener("click", () => {
        if (quantity < maxQuantity) {
          quantity++;
          quantitySpan.textContent = quantity;
          hiddenQuantityInput.value = quantity; // Update hidden input
        } else {
          alert("Cannot select more than available stock!");
        }
      });
    });
  </script>
  <script>
    function toggleCartDrawer() {
      const cartDrawer = document.getElementById("cart-drawer");

      cartDrawer.classList.toggle("open");
    }
  </script>
  <script>
    function showNotification() {
      const notification = document.getElementById("cartNotification");
      notification.classList.add("show");

      // Hide the notification after 3 seconds
      setTimeout(() => {
        notification.classList.remove("show");
      }, 3000);
    }
  </script>
</html>
