<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/home.css" rel="stylesheet" />
    <title>Account</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <style>
      /* General Reset */

      h1 {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 20px;
      }

      a {
        text-decoration: none;
        color: #000;
      }

      .containers {
        max-width: 1200px;
        margin: 0 auto;
      }

      .logout {
        display: flex;
        align-items: center;
        margin-bottom: 40px;
        font-size: 16px;
      }

      .logout svg {
        margin-right: 8px;
      }

      .content {
        display: flex;
        justify-content: space-between;
      }

      .order-history {
        width: 65%;
      }

      .order-history h2 {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 15px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        font-size: 16px;
      }

      th,
      td {
        text-align: left;
        padding: 10px;
        border-bottom: 1px solid #ddd;
      }

      th {
        color: #888;
        font-weight: 400;
        font-size: 14px;
      }

      td:first-child {
        font-weight: bold;
      }

      .account-details {
        width: 30%;
      }

      .account-details h2 {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .account-details p {
        line-height: 1.5;
        font-size: 16px;
        margin-bottom: 20px;
      }

      .view-addresses {
        font-size: 16px;
        font-weight: bold;
        color: #000;
      }

      .view-addresses span {
        color: #888;
      }

      .order-btn {
        padding: 10px 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
        color: #333;
        background-color: #fff;
        font-size: 12px;
        letter-spacing: 1px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s ease;
        font-weight: 200;
      }
      .no-orders {
        text-align: center;
        font-size: 1.5rem;
        margin: 20px;
        color: #555;
      }

      .order-btn:hover {
        background-color: #fa9f59;
      }

      .adr-btn {
        padding: 10px 20px;
        border-radius: 5px;
        border: 1px solid #ddd;
        color: #333;
        background-color: #fff;
        font-size: 12px;
        letter-spacing: 1px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s ease;
        font-weight: 200;
      }

      .adr-btn:hover {
        background-color: #fa9f59;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <img src="/img/techstore.png" alt="logo of store" class="tech-logo" />
        <nav class="nav-list">
          <ul class="list">
            <li><a href="/" class="nav-links">Home</a></li>
            <li class="dropdown-container">
              <a href="#" class="nav-links">What's New</a>
              <div class="dropdown">
                <a href="#">New Arrivals</a>
                <a href="#">Trending</a>
                <a href="#">Best Sellers</a>
              </div>
            </li>
            <li class="dropdown-container">
              <a href="#" class="nav-links">Category</a>
              <div class="dropdown">
                <a href="/product-category/?category=Headphone&page=1"
                  >Headphones</a
                >
                <a href="/product-category/?category=Earbuds&page=1">Earbuds</a>
                <a href="/product-category/?category=Wired&page=1"
                  >Wired Earphones</a
                >
                <a href="/product-category/?category=Speaker&page=1"
                  >Speakers</a
                >
              </div>
            </li>
            <li><a href="#" class="nav-links">Blogs</a></li>
            <% if (userIsLoggedIn) { %>
            <li><a href="/profile" class="nav-links">My Orders</a></li>
            > <% } %>
          </ul>
        </nav>

        <div class="icon-container">
          <div class="Account">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="account-icon"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"
              />
            </svg>
            <div class="dropdown-container sm-cont">
              <% if (userIsLoggedIn) { %>
              <a href="#" class="profile-link">Account</a>
              <div class="dropdown sm-drop">
                <a href="/logout">Sign out</a>
              </div>
              <% } else { %>
              <a href="/login" class="profile-link">Account</a>
              <% } %>
            </div>
          </div>
          <div class="Cart">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="cart-icon"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"
              />
            </svg>

            <a href="#" class="profile-link" onclick="toggleCartDrawer()"
              >Cart</a
            >
          </div>
        </div>
      </div>

      <div id="cart-drawer" class="cart-drawer hidden">
        <div class="cart-header">
          <h2>Your Cart</h2>
          <button class="close-cart" onclick="toggleCartDrawer()">
            <span style="font-size: 1.2rem; color: #555">x</span>
          </button>
        </div>

        <div class="cart-items">
          <% if (cart.length === 0) { %>
          <div class="empty-cart-message">
            <p>Your cart is empty.</p>
          </div>
          <% } else { %> <% cart.forEach(item => { %>
          <div class="cart-item">
            <img src="<%= item.imageUrl[0] %>" alt="<%= item.name %>" />
            <div class="item-details">
              <p><%= item.name %></p>
              <p>Category: <%= item.category %></p>
              <p>Price: $<%= item.price %></p>
              <p>Quantity: <%= item.quantity %></p>
            </div>
            <p>Total: $<%= item.totalPrice %></p>
          </div>
          <% }) %> <% } %>
        </div>

        <div class="trash">
          <% if (cart.length !== 0) { %>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="trash-icon"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
            />
          </svg>

          <a href="/clear-cart/<%=User._id%>" class="trash-link">Clear Cart</a>
          <% } %>
        </div>

        <div class="cart-footer">
          <% if (cart.length > 0) { %>
          <p>Subtotal: $<%= totalPrice %></p>
          <button
            class="checkout-btn"
            onclick="window.location.href='/checkout'"
          >
            Checkout
          </button>
          <% } %>
        </div>
      </div>
    </header>
    <div class="containers">
      <!-- Title & Logout -->
      <aside>
        <h1>Account</h1>
        <div class="logout">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            viewBox="0 0 16 16"
          >
            <path
              d="M10.146 7.354a.5.5 0 0 0 0 .707L11.793 10H5.5a.5.5 0 0 0 0 1h6.293l-1.647 1.646a.5.5 0 0 0 .708.708l2.5-2.5a.5.5 0 0 0 0-.708l-2.5-2.5a.5.5 0 0 0-.708 0z"
            />
            <path
              d="M4.5 3.5a.5.5 0 0 0 1 0V3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1h-6a1 1 0 0 1-1-1v-.5a.5.5 0 0 0-1 0V13a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-6a2 2 0 0 0-2 2v.5z"
            />
          </svg>
          <span>Log out</span>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="content">
        <!-- Order History Section -->
        <div class="order-history">
          <h2>Order history</h2>

          <% if (orders.length === 0) { %>
          <div class="no-orders">No orders found</div>
          <% } else { %>
          <table>
            <thead>
              <tr>
                <th>ORDER</th>
                <th>DATE</th>
                <th>PAYMENT STATUS</th>
                <th>FULFILLMENT STATUS</th>
                <th>TOTAL</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order => { %>
              <tr>
                <td>
                  <button
                    class="order-btn"
                    onclick="window.location.href='/order-details/<%= order._id %>'"
                  >
                    <%= order.orderNumber %>
                  </button>
                </td>
                <td>
                  <%= new Date(order.createdAt).toLocaleDateString('en-US', {
                  year: 'numeric', month: 'long', day: 'numeric' }) %>
                </td>
                <td>COD</td>
                <td><%= order.status %></td>
                <td>$<%= order.totalPrice.toLocaleString() %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } %>
        </div>

        <!-- Account Details Section -->
        <div class="account-details">
          <h2>Account details</h2>
          <p><%= User.email %></p>
          <% if (User.address) { %>
          <p>309, 2nd Floor, 1st Avenue, Gulshan-e-Iqbal, Karachi</p>
          <p>Pakistan</p>
          <p class="view-addresses">VIEW ADDRESSES (<span>3</span>)</p>
          <% } else { %>
          <a href="/add-address" class="adr-btn">Add Address</a>
          <% } %>
        </div>
      </div>
    </div>
  </body>
  <script>
    function toggleCartDrawer() {
      console.log("yed");
      const cartDrawer = document.getElementById("cart-drawer");
      console.log(cartDrawer);
      cartDrawer.classList.toggle("open");
    }
  </script>
</html>
